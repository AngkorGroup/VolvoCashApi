@model VolvoCash.Application.MainContext.DTO.Charges.ChargeDTO
@using VolvoCash.CrossCutting.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Constancia de operación</title>
    <style>
        @Html.Raw("@font-face{font-family: VolvoBroadProDigital ; src: url(\"/fonts/VolvoBroadProDigital.otf\");}")
        @Html.Raw("@font-face{font-family: VolvoNovum-Regula ; src: url(\"/fonts/VolvoNovum-Regular.otf\");}")
    </style>
</head>
<body>
    <div style="padding: 16px; width: 395px; height:451px ; box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1); position: absolute;">
        <div style="position: absolute;left: 36%;right: 35.95%;  top: 4%; bottom: 74.72%; background: #FFFFFF;
       display: flex;align-items: center;box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.1); width: 100px; height: 100px; border-radius: 100%; z-index: 2;">
            <p style=" color: #16A6C9;  font-size: 33px; text-align: center; font-family: VolvoBroadProDigital">VOLVO CASH</p>
        </div>
        <div style="border: 3px solid #16A6C9; width: 355px; position: absolute; height: 358px; box-sizing: border-box;
        left: 7%; right: 5.06%; top: 16.19%; bottom: 4.43%; z-index: 1;">
            <div style="margin-top: 60px;">
                <p style="text-align: center; font-weight: bold;font-size: 18px; color: #16A6C9; font-family: VolvoNovum-Regula;">Constancia de operación</p>
                <div style="height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px; position: absolute; left: 60px; font-family: VolvoNovum-Regula">Operación</p>
                    <p style="color: #000000; font-style: normal; font-weight: bold;font-size: 16px;  position: absolute; left: 180px; font-family: VolvoNovum-Regula">@Model.OperationCode</p>
                </div>
                <div style="height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px; position: absolute; left: 60px; font-family: VolvoNovum-Regula">Monto</p>
                    <p style="color: #000000; font-style: normal; font-weight: bold;font-size: 16px;  position: absolute; left: 180px; font-family: VolvoNovum-Regula">@Model.Amount.Label</p>
                </div>
                <div style="height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px;position: absolute; left: 60px; font-family: VolvoNovum-Regula">Concepto</p>
                    <p style="color: #000000;font-style: normal; font-weight: bold;font-size: 16px;  position: absolute; left: 180px; font-family: VolvoNovum-Regula">@(Model.Description ?? @Model.DisplayName)</p>
                </div>
                <div style="height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px;position: absolute; left: 60px; font-family: VolvoNovum-Regula">Cajero</p>
                    <p style="color: #000000;font-style: normal; font-weight: bold;font-size: 16px;  position: absolute; left: 180px; font-family: VolvoNovum-Regula">@Model.Cashier.FullName</p>
                </div>
                <div style=" height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px;position: absolute; left: 60px; font-family: VolvoNovum-Regula">Fecha</p>
                    <p style="color: #000000;font-style: normal; font-weight: bold;font-size: 16px; position: absolute; left: 180px; font-family: VolvoNovum-Regula">@Model.CreatedAt.ToString(DateTimeFormats.DateFormat)</p>
                </div>
                <div style="height: 37px;">
                    <p style="color: #777777; font-style: normal; font-weight: normal;font-size: 14px;position: absolute; left: 60px; font-family: VolvoNovum-Regula">Hora</p>
                    <p style="color: #000000; font-style: normal; font-weight: bold;font-size: 16px; position: absolute; left: 180px; font-family: VolvoNovum-Regula">@Model.CreatedAt.ToString(DateTimeFormats.TimeShortFormat)</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
